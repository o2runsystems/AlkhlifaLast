<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="7dp"
    android:layout_marginStart="7dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/carder"
    android:fillViewport="true"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:layout_constraintRight_toLeftOf="@+id/deleteimag"
            app:layout_constraintTop_toBottomOf="@+id/imgforpic"
            app:srcCompat="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/hamad"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:srcCompat="@drawable/ic_share"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imgforpic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:id="@+id/deleteimag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:srcCompat="@drawable/ic_delete"
            app:layout_constraintRight_toLeftOf="@+id/imageView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imgforpic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:text="تاكيد"
            android:textColor="@color/confirm"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imgforpic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="حمد العتيق"
            android:textColor="@color/header"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="7 ساعة مضت"
            android:textColor="@color/date"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtfortitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="زواج حسن"
            android:textColor="@color/avatar"
            android:textSize="15sp"
            app:layout_constraintRight_toLeftOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        <TextView
            android:id="@+id/txtforbody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="اليوم بحمد الله تم عقد قران حسن احمد دفع الله بقرية الشنانة بمقاطعة القصيم وقد كان الحضور فعالا جدا وكان الكل سعيد جدا وذالك اثر حضور الملك سلمان وجميع اولاده "
            android:textColor="@color/body"
            android:textSize="13sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <ImageView
            android:id="@+id/imgforpic"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtforbody"
            app:srcCompat="@drawable/marrage" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>