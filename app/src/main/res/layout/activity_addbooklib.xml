<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.o2run.kh_design.PostActivity">

        <TextView
            android:id="@+id/txtfornamecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="معلومات الكتاب"
            android:textColor="@color/btn_post_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_back"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_book" />


        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="50dp"
            android:text="الأسم"
            android:textColor="@color/header"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/input_name"
            style="@style/App_EditText_Book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/confirm"
            android:textColorHint="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txt_1"
            app:layout_constraintTop_toTopOf="@+id/txtfornamecard" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:srcCompat="@drawable/ic_writer" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="24dp"
            android:text="أسم المؤلف"
            android:textColor="@color/header"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/txt_1" />



        <EditText
            android:id="@+id/bookAurthor"
            style="@style/App_EditText_Book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/confirm"
            android:textColorHint="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            android:layout_marginTop="-18dp"
            app:layout_constraintTop_toBottomOf="@+id/input_name" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/ic_internet" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="19dp"
            android:text="رابط الكتاب"
            android:textColor="@color/header"
            app:layout_constraintRight_toLeftOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/bookUrlDowoload"
            style="@style/App_EditText_Book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/confirm"
            android:textColorHint="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/bookAurthor" />


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:srcCompat="@drawable/ic_idea" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:text="الوصف"
            android:textColor="@color/header"
            app:layout_constraintRight_toLeftOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/bookDecrip"
            style="@style/App_EditTex_Post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="وصف الكتاب"
            android:inputType="textMultiLine"
            android:gravity="top|right"
            android:paddingRight="10dp"
            android:textColor="#696969"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />




        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"/>


        <Button
            android:id="@+id/btn_signup"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/btn_post"
            android:text="نشر"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" />

        <ImageView
            android:id="@+id/bookfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_photo_black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="39dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true" />




        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginBottom="31dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_signup"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>