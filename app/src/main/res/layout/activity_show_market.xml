<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarShowmarket"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/market_img"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/news"
        android:scaleType="centerCrop"
        android:layout_below="@id/toolbarShowmarket"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/market_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_toEndOf="@id/market_img"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/toolbarShowmarket"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/market_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_toEndOf="@id/market_name"
        android:textColor="#ff4081"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:layout_below="@id/toolbarShowmarket"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/market_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about"
        android:layout_toEndOf="@id/market_img"
        android:layout_below="@id/market_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:id="@+id/market_cat"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/market_img"
        android:text="cat"
        android:layout_below="@id/market_about"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        />
    <TextView
        android:id="@+id/market_type"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="type"
        android:layout_toEndOf="@id/market_cat"
        android:layout_below="@id/market_about"
        android:layout_marginTop="21dp"
        />

    <TextView
        android:id="@+id/market_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_toEndOf="@id/market_type"
        android:layout_below="@id/market_about"
        android:layout_marginTop="21dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        />
    <ImageView
        android:id="@+id/market_ico_call"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/market_cat"
        android:src="@drawable/call"
        android:layout_toEndOf="@id/market_img"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="10dp"
        />


    <TextView
        android:id="@+id/market_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone"
        android:layout_toEndOf="@id/market_ico_call"
        android:layout_below="@id/market_cat"
        android:layout_marginTop="21dp"
        android:autoLink="phone"
        />



</RelativeLayout>

