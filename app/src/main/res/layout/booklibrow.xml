<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="7dp"
    android:layout_marginStart="7dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/carder"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/booklibBookImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/marrage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_book"
            app:layout_constraintTop_toBottomOf="@+id/booklibBookImage" />


        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:text="الأسم:"
            android:textColor="@color/header"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/booklibBookImage" />



        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:srcCompat="@drawable/ic_writer" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:text="أسم المؤلف:"
            android:textColor="@color/header"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/txt_1" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/ic_download" />

        <TextView
            android:id="@+id/booklibBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="العلم و الايمان"
            android:textColor="@color/btn_post_color"
            app:layout_constraintRight_toLeftOf="@+id/txt_1"
            app:layout_constraintTop_toBottomOf="@+id/booklibBookImage" />

        <TextView
            android:id="@+id/booklibBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:text="حسن خليفة "
            android:textColor="@color/btn_profile_color"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/booklibBookName" />

        <TextView
            android:id="@+id/booklibBookUrlDonwloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="donload"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/booklibBookAuthor"
            android:clickable="true"
            android:linksClickable="true"

            app:layout_constraintRight_toLeftOf="@+id/imageView7"
            android:layout_marginRight="8dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>